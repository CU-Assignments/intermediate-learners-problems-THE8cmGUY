public class MaximumSubarray {
    public static int maxSubArray(int[] nums) {
        int maxSum = nums[0];    // To track the maximum sum
        int currentSum = nums[0]; // To track the current sum

        // Start from the second element
        for (int i = 1; i < nums.length; i++) {
            // Choose whether to add the current element to the current sum or start a new subarray
            currentSum = Math.max(nums[i], currentSum + nums[i]);

            // Update the max sum encountered so far
            maxSum = Math.max(maxSum, currentSum);
        }

        return maxSum;
    }

    public static void main(String[] args) {
        int[] nums1 = {-2, 1, -3, 4, -1, 2, 1, -5, 4};
        System.out.println(maxSubArray(nums1));  // Output: 6

        int[] nums2 = {1};
        System.out.println(maxSubArray(nums2));  // Output: 1

        int[] nums3 = {5, 4, -1, 7, 8};
        System.out.println(maxSubArray(nums3));  // Output: 23
    }
}
